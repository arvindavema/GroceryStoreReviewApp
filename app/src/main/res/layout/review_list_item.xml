<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/authorImage"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:contentDescription="TODO"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@+id/reviewBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="1dp"
        android:hint="@string/store_name"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintEnd_toStartOf="@+id/authorImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorName"
        tools:text="@tools:sample/cities" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#CDDC39"
        android:numStars="5"
        android:rating="4"
        app:layout_constraintBottom_toTopOf="@+id/reviewBody"
        app:layout_constraintEnd_toStartOf="@+id/authorImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/storeName" />

    <TextView
        android:id="@+id/reviewBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginBottom="4dp"
        android:hint="@string/review_body"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorImage"
        tools:text="he worst product ever" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:gravity="start"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/authorImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datePosted"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginStart="355dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:text="Posted on: "
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewBody" />

</androidx.constraintlayout.widget.ConstraintLayout>